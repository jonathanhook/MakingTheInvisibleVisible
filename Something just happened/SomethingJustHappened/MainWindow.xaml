<Window x:Class="SomethingJustHappened.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ComboBox Name="VideoDevices" Grid.Column="0" Margin="5, 5, 5, 0" SelectionChanged="VideoDevices_SelectionChanged" />
            <ComboBox Name="AudioDevices" Grid.Column="1" Margin="0, 5, 5, 0" SelectionChanged="AudioDevices_SelectionChanged"/>
        </Grid>
        
        <Button Name="StartButton" Grid.Row="1" Click="StartButton_Click" Margin="5, 5, 5, 0">
            Start
        </Button>

        <Button Name="StopButton" Grid.Row="2" Click="StopButton_Click" Margin="5, 5, 5, 0" IsEnabled="False">
            Stop
        </Button>

        <Button Name="ClickButton" Grid.Row="3" Click="ClickButton_Click" Margin="5, 5, 5, 5" IsEnabled="False">
            Click
        </Button>
    </Grid>
</Window>
