<Window x:Class="SomethingJustHappened.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        KeyUp="Window_KeyDown_1"
        MouseDown="Window_MouseDown_1"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" IsHitTestVisible="False" Name="AudioDeviceLabel" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Label Grid.Row="1" IsHitTestVisible="False" Name="VideoDeviceLabel" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
        
        <Label Grid.Row="2" IsHitTestVisible="False" Visibility="Hidden" Name="RecordingLabel" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">
            Recording
        </Label>
        <Label Grid.Row="3" Name="ClickedLabel" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Hidden" FontSize="24">
            Clicked
        </Label>
    </Grid>
</Window>
